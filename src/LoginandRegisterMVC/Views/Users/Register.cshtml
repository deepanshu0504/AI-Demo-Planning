@model LoginandRegisterMVC.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-center">Register</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Username" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label col-md-2"></label>
            @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")) && Context.Session.GetString("Role")!.Equals("Admin"))
            {
                <div class="col-md-10">
                    <select asp-for="Role" class="form-control">
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="col-md-10">
                    <select asp-for="Role" class="form-control">
                        <option value="">Select Role</option>
                        <option value="User">User</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Signup" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}
