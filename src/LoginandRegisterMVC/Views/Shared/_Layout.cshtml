<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Login Demo</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="~/js/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="navbar-brand">
            <a class="navbar-brand" asp-controller="Users" asp-action="Index">LOGINDEMO</a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="nav navbar-nav ml-auto">
                @if (Context.Session.GetString("UserId") != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                }
                
                <!-- Blogs - Public (visible to all) -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Blogs" asp-action="Index">
                        <i class="fas fa-newspaper"></i> Blogs
                    </a>
                </li>

                @if (Context.Session.GetString("UserId") != null)
                {
                    <!-- My Blogs - Authenticated users only -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blogs" asp-action="MyBlogs">
                            <i class="fas fa-book"></i> My Blogs
                        </a>
                    </li>
                    
                    <!-- Create Blog - Authenticated users only -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blogs" asp-action="Create">
                            <i class="fas fa-plus-circle"></i> Create Blog
                        </a>
                    </li>
                    
                    <!-- Logout -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Logout">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                }
                else
                {
                    <!-- Login - Guest users -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                    
                    <!-- Signup - Guest users -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Signup
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - LoginDemo All Rights Reserved</p>
    </footer>

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
